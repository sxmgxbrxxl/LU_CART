<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.LUCART" parent="Theme.MaterialComponents.Light.NoActionBar">

        <item name="android:statusBarColor">@color/six_green</item> <!-- Custom status bar color -->
        <item name="android:windowLightStatusBar">true</item> <!-- Dark icons for light-colored status bar -->
        <item name="android:navigationBarColor">@color/two_green</item> <!-- Optional: Customize navigation bar -->
        <item name="android:fitsSystemWindows">true</item> <!-- Disable edge-to-edge by respecting system windows -->

    </style>
    
    <style name="DialogAnimation">
        
        <item name="android:windowEnterAnimation">@anim/slide_in_bottom</item>
        <item name="android:windowExitAnimation">@anim/slide_out_bottom</item>
        
    </style>
       
</resources>